<div class="card">
  <%= link_to image_tag(shop.image, class: :card__img ), root_path%>
  <div class="card__body">
    <%= link_to shop.shop_name, root_path, class: :card__title%>
    <p class="card__summary">
      <%= shop.bland %>
    </p>
    <%= link_to "by #{shop.user.nickname}", root_path, class: :card__user %>
  </div>
</div>